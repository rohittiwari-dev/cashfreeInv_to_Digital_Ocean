<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    <div class="panel" id="panel" style="width: 510px; margin: auto">
      <div class="panel-heading" id="heading"></div>
      <div class="panel-body">
        <!-- <div class="container">-->
        <div class="d-flex mt-5 justify-content-center align-item-center"><img height="40" width="50"
            src="https://www.nirvanameet.com/icons/Icon-512.png" alt="" style="margin: center;">
          <h1 class="p-0 m-0 " align="center">Nirvanameet</h1>
        </div>
        <p class="p-0 m-0 text-center">Making India Meet With NirvanaMeet</p>
        <hr />
        <table id="'table" class="table m-0 p-0 mt-4 table-responsive table-hover" width="80%" cellspacing="0"
          cellpadding="0">

          <tbody id="tablebody">

            <tr>
              <td class="bg-primary bg-gradient text-light">Order ID</td>
              <td id="orderId" class="bg-info bg-gradient" style="--bs-bg-opacity: .1;"><%= data.orderId %></td>
            </tr>
            <tr>
              <td class="bg-primary bg-gradient text-light">Order Amount</td>
              <td id="orderAmount" class="bg-info bg-gradient" style="--bs-bg-opacity: .1;"><%= data.orderAmount %>
              </td>
            </tr>
            <tr>
              <td class="bg-primary bg-gradient text-light">Reference ID</td>
              <td id="referenceId" class="bg-info bg-gradient" style="--bs-bg-opacity: .1;"><%= data.referenceId %>
              </td>
            </tr>
            <tr>
              <td class="bg-primary bg-gradient text-light">Transaction Status</td>
              <td id="txStatus" class="bg-info bg-gradient" style="--bs-bg-opacity: .1;"><%= data.txStatus %></td>
            </tr>
            <tr>
              <td class="bg-primary bg-gradient text-light">Payment Mode </td>
              <td id="paymentMode" class="bg-info bg-gradient" style="--bs-bg-opacity: .1;"><%= data.paymentMode %>
              </td>
            </tr>
            <tr>
              <td class="bg-primary bg-gradient text-light">Message</td>
              <td id="txMsg" class="bg-info bg-gradient" style="--bs-bg-opacity: .1;"><%= data.txMsg %></td>
            </tr>
            <tr>
              <td class="bg-primary bg-gradient text-light">Transaction Time</td>
              <td id="txTime" class="bg-info bg-gradient" style="--bs-bg-opacity: .1;"><%= data.txTime %></td>
            </tr>
          </tbody>
        </table><br>
        <hr />
        <center><progress value="0" max="5" id="progressBar"></progress>
          <p id="progress"></p>
        </center>
        <script>
          var timeleft = 5;
          var downloadTimer = setInterval(function () {
            if (timeleft <= 0) {
              clearInterval(downloadTimer);
            }
            document.getElementById("progressBar").value = 5 - timeleft;
            document.getElementById('progress').innerHTML = `Do Not Refress the page, Redirecting in ${0 + timeleft}s ...`
            timeleft -= 1;
          }, 1000);

          setTimeout(() => { window.location.href = '/download' }, 2000)

        </script>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
</body>

</html>